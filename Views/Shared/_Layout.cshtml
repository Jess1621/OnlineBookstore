<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewData["Title"] </title>

    <!-- Favicons -->
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,700,700i&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS Files -->
    <link href="~/lib/css/animate.css" rel="stylesheet" />
    <link href="~/lib/css/bootstrap.css" rel="stylesheet" />

    <!--Font Awesome Files-->
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />

    <!-- Main CSS File -->
    <link href="~/css/Style.css" rel="stylesheet" />

</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center header-transparent">
        <div class="container d-flex justify-content-between align-items-center">

            <div class="logo">
                <h1 class="text-light"><a asp-controller="Home" asp-action="Index"><span>Online Bookstore</span></a></h1>
                <!-- Uncomment below if you prefer to use an image logo -->
                <!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
            </div>

            <!--<nav id="navbar" class="navbar">
                <ul>
                    <li><a class="active " asp-controller="Home" asp-action="Index">Home</a></li>
                </ul>
            </nav>-->
            <!-- End navbar -->
            <div class="col-3 text-right text-white">
                <vc:cart-summary />
            </div>
        </div>
    </header><!-- End Header -->
    <!-- ======= Hero Section ======= -->
    <section id="hero" class="d-flex justify-cntent-center align-items-center">
        <div id="heroCarousel" class="container carousel carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">

            <!-- Slide 1 -->
            <div class="carousel-item active">
                <div class="carousel-container">
                    <h2 class="animate__animated animate__fadeInDown"><span>Online Bookstore</span></h2>
                    <p class="animate__animated animate__fadeInUp">View our collection of books.</p>
                    <a href="#booklist" class="btn-get-started animate__animated animate__fadeInUp">See Our List</a>
                </div>
            </div>

            <div class="carousel-item">
                <div class="carousel-container">
                    <h2 class="animate__animated animate__fadeInDown">Check This Out!</h2>
                    <p class="animate__animated animate__fadeInUp">Browse our selection of books, View Your Cart, and Checkout.</p>
                    <a asp-page="/Purchase" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()" 
                       class="btn-get-started animate__animated animate__fadeInUp">View Your Cart</a>
                </div>
            </div>

            <a class="carousel-control-prev" href="#heroCarousel" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon about fa fa-arrow-left" aria-hidden="true"></span>
            </a>

            <a class="carousel-control-next" href="#heroCarousel" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon fa fa-arrow-right" aria-hidden="true"></span>
            </a>
        </div>
    </section>
    <!-- ======= End Hero Section ======= -->
    <!-- ======= Main Content ======= -->
    <div class="row m-1 p-1">
        <!--Left Side Column - Will display the book Categorys - Reference TypeViewComponent.cs -->
        <div id="types" class="col-3">
            <vc:types></vc:types>
        </div>

        <!-- Main Column w/ Book Info -->
        <div id="booklist" class="col-9">

            <div>
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- ======= Footer ======= -->
    <footer id="footer" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong><span>IS 413</span></strong>. All Rights Reserved.
            </div>
            <div class="credits">
                Designed by Jess Hansen
            </div>
        </div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="fa fa-arrow-up"></i></a>

    <!-- JS Files -->
    <script src="~/lib/js/bootstrap.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>
